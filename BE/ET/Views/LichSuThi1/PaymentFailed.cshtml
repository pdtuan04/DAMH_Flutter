@{
    ViewData["Title"] = "Thanh toán thất bại";
    var error = ViewData["Error"]?.ToString() ?? "Không rõ nguyên nhân";
}

<div class="container" style="max-width: 600px; margin-top: 100px; text-align:center;">
    <h2 style="font-weight:600; font-size:28px; color:#d93025; letter-spacing:-0.5px;">
        Thanh toán không thành công
    </h2>

    <p style="margin-top: 12px; font-size:16px; color:#555;">
        Giao dịch của bạn chưa được xử lý.
    </p>

    <p style="margin-top: 4px; font-size:15px; color:#777;">
        Lý do: <strong style="color:#333;">@error</strong>
    </p>

    <div style="margin-top: 40px; display:flex; justify-content:center; gap:14px;">
        <a href="/LichSuThi1/LuyenLaiCauSai"
           style="
                padding:10px 20px;
                border-radius:10px;
                border:1px solid #d0d0d0;
                text-decoration:none;
                color:#0071e3;
                font-size:15px;
                transition:0.2s;">
            Quay lại luyện tập
        </a>

        <a href="/LichSuThi1"
           style="
                padding:10px 20px;
                border-radius:10px;
                background:#f5f5f7;
                text-decoration:none;
                color:#333;
                font-size:15px;
                transition:0.2s;">
            Trang lịch sử thi
        </a>
    </div>
</div>
